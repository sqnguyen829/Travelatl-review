<% if flash[:errors]%>
    <% flash[:errors].each do |error|%>
        <%=error%><br>
    <%end%>
<%end%>

<%= form_for @blogger do |f|%>
<%= f.label :blogger_name %>
<%= f.text_field :name %><br>

<%= f.label :blogger_age %>
<%= f.number_field :age %><br>

<%= f.label :blogger_bio %>
<%= f.text_area :bio %><br>

<%=f.submit%>
<%end%>